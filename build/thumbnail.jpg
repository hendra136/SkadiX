<svg width="1200" height="630" viewBox="0 0 1200 630" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e3a8a;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#3b82f6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#06b6d4;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="waveGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#60a5fa;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#34d399;stop-opacity:0.8" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Wave pattern representing sea levels -->
  <path d="M0,400 Q300,350 600,400 T1200,400 L1200,630 L0,630 Z" fill="url(#waveGradient)" opacity="0.6"/>
  <path d="M0,450 Q300,400 600,450 T1200,450 L1200,630 L0,630 Z" fill="url(#waveGradient)" opacity="0.4"/>
  
  <!-- Port/logistics icons -->
  <g transform="translate(100,150)">
    <!-- Container ship -->
    <rect x="0" y="20" width="80" height="30" fill="#ffffff" opacity="0.9"/>
    <rect x="10" y="10" width="15" height="20" fill="#ffffff" opacity="0.9"/>
    <rect x="30" y="10" width="15" height="20" fill="#ffffff" opacity="0.9"/>
    <rect x="50" y="10" width="15" height="20" fill="#ffffff" opacity="0.9"/>
  </g>
  
  <g transform="translate(950,200)">
    <!-- Port crane -->
    <rect x="0" y="0" width="8" height="100" fill="#ffffff" opacity="0.9"/>
    <rect x="-20" y="10" width="48" height="8" fill="#ffffff" opacity="0.9"/>
    <rect x="20" y="18" width="8" height="20" fill="#ffffff" opacity="0.9"/>
  </g>
  
  <!-- Cold chain symbol -->
  <g transform="translate(500,100)">
    <circle cx="0" cy="0" r="40" fill="none" stroke="#ffffff" stroke-width="4" opacity="0.8"/>
    <path d="M-20,-20 L-10,-10 L-20,0 L-10,10 L-20,20" stroke="#ffffff" stroke-width="3" fill="none" opacity="0.8"/>
    <path d="M20,-20 L10,-10 L20,0 L10,10 L20,20" stroke="#ffffff" stroke-width="3" fill="none" opacity="0.8"/>
    <circle cx="0" cy="0" r="8" fill="#ffffff" opacity="0.8"/>
  </g>
  
  <!-- Title -->
  <text x="600" y="280" font-family="Arial, sans-serif" font-size="72" font-weight="bold" text-anchor="middle" fill="#ffffff">
    SkadiX
  </text>
  
  <!-- Subtitle -->
  <text x="600" y="330" font-family="Arial, sans-serif" font-size="32" text-anchor="middle" fill="#e5e7eb">
    Cold-Chain Logistics Infrastructure
  </text>
  
  <!-- Description -->
  <text x="600" y="380" font-family="Arial, sans-serif" font-size="24" text-anchor="middle" fill="#d1d5db">
    Data-driven decision support for European coastal ports
  </text>
  
  <!-- URL -->
  <text x="600" y="550" font-family="Arial, sans-serif" font-size="20" text-anchor="middle" fill="#9ca3af">
    skadi-x.vercel.app
  </text>
</svg>